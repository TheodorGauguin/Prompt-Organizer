{
  "manifest_version": 2,
  "name": "Prompt Organizer",
  "version": "1.0",
  "description": "A Chromium extension to save and organize prompts into folders.",
  "permissions": ["storage", "activeTab", "tabs"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}
